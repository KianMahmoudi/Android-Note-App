<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Note" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Note" parent="Base.Theme.Note" />

    <style name="text_tab" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="fontFamily">@font/open_sand_regular</item>
        <item name="background">@color/background</item>
    </style>

    <style name="navigation_bar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="background">@color/background</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/open_sand_regular</item>
    </style>

    <style name="btn_add_new_note_dialog" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@drawable/add_note_dialog_background</item>
        <item name="fontFamily">@font/open_sand_regular</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginLeft">34dp</item>
        <item name="android:textSize">26dp</item>
    </style>

    <style name="fab_style" parent="ShapeAppearanceOverlay.Material3.FloatingActionButton">
        <item name="background">@drawable/fab_background</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="fontFamily">@font/open_sand_regular</item>
        <item name="android:drawableRight">@drawable/ic_check_24</item>
        <item name="iconTint">@color/white</item>

    </style>

    <style name="MaterialAlertDialog_rounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
    </style>



</resources>